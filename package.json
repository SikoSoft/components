{
  "name": "ss-components",
  "description": "Common web components",
  "license": "MIT",
  "author": "Aaron Wright",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx eslint --fix src",
    "prepare": "husky install"
  },
  "dependencies": {
    "lit": "~3.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "~7.10.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-eslint-comments": "~3.2.0",
    "eslint-plugin-lit": "~1.13.0",
    "eslint-plugin-prettier": "~5.1.3",
    "typescript": "~5.2.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "import/no-unresolved": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "customElements": "custom-elements.json"
}
